<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PlayersWindow" Height="270" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="../Images/1.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid>
        <Label Content="Управління гравцем" HorizontalAlignment="Left" Margin="163,21,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI Light" FontSize="16" Foreground="White"/>
        <Button Content="Додати гравця" HorizontalAlignment="Left" Margin="59,86,0,0" VerticalAlignment="Top" Width="170" Height="26" Click="AddPlayer"/>
        <Button Content="Видалити гравця" HorizontalAlignment="Left" Margin="59,148,0,0" VerticalAlignment="Top" Width="170" Height="27" Click="DeletePlayer"/>
        <Button Content="Весь список гравців" HorizontalAlignment="Left" Margin="269,148,0,0" VerticalAlignment="Top" Width="170" Height="27" Click="ShowAllPlayers"/>
        <Button Content="Змінити дані про гравця" HorizontalAlignment="Left" Margin="269,86,0,0" VerticalAlignment="Top" Width="170" Height="26" Click="EditPlayer"/>

    </Grid>
</Window>
