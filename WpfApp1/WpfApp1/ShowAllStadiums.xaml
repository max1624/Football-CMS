<Window x:Class="WpfApp1.ShowAllStadiums"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ShowAllStadiums" Height="400" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="../Images/2.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid>
        <ScrollViewer x:Name="StadiumShowList" HorizontalAlignment="Left" Height="243" Margin="10,74,0,0" VerticalAlignment="Top" Width="374" Background="LightGray" />
        <Label Content="Список всіх стадіонів" HorizontalAlignment="Left" Margin="117,26,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Microsoft YaHei UI Light" FontSize="16"/>
    </Grid>
</Window>
